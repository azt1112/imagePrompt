{
  "github": {
    "silent": true
  },
  "buildCommand": "bun run build",
  "outputDirectory": "apps/nextjs/.next",
  "installCommand": "bun install",
  "framework": "nextjs",
  "functions": {
    "apps/nextjs/src/app/api/**/route.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
