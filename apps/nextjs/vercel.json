{
  "github": {
    "silent": true
  },
  "buildCommand": "cd ../.. && bun run build --filter=nextjs",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && bun install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "app/**": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}